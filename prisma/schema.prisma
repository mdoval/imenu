generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model etiquetatoproducto {
  A Int
  B Int

  @@unique([A, B], map: "_EtiquetaToProducto_AB_unique")
  @@index([B], map: "_EtiquetaToProducto_B_index")
  @@map("_etiquetatoproducto")
}

model etiqueta {
  id     Int    @id @default(autoincrement())
  nombre String
  productos producto[]
  bar         bar @relation(fields: [barId], references: [id])
  barId       Int
}

model imagen {
  id  Int    @id @default(autoincrement())
  url String
}

model producto {
  id          Int     @id @default(autoincrement())
  nombre      String
  descripcion String
  precio      Decimal
  imagen      String
  etiqueta    etiqueta[]
  bar         bar @relation(fields: [barId], references: [id])
  barId       Int

}

model usuario {
  id    Int    @id @default(autoincrement())
  email String @db.VarChar(255)
  bares bar[]
}

model bar {
  id     Int    @id @default(autoincrement())
  nombre String @db.VarChar(255)
  logo   String @db.VarChar(255)
  usuarios usuario[]
  productos producto[]
  etiquetas etiqueta[]
}
